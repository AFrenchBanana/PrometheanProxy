# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (SQLite by default, can be changed to PostgreSQL/MySQL)
# DATABASE_URL=sqlite:///db.sqlite3
# DATABASE_URL=postgresql://user:password@localhost:5432/promethean_web
# DATABASE_URL=mysql://user:password@localhost:3306/promethean_web

# Redis Configuration (for Django Channels)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# PrometheanProxy Backend API Configuration
PROMETHEAN_API_URL=https://localhost:2001
PROMETHEAN_API_VERIFY_SSL=False

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_RECONNECT_INTERVAL=5

# Email Configuration (optional, for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password

# Sentry Configuration (optional, for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Development Settings
